<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.dell.appstore.activity.chitietsp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarctsp"
        android:background="#e44293"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgctsp"
            android:src="@drawable/imgnew"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="#163dbe"
                android:layout_marginTop="10dp"
                android:id="@+id/txttenctsp"
                android:text="Tên sản phẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f00"
                android:textSize="15sp"
                android:id="@+id/txtgiactsp"
                android:layout_marginTop="10dp"
                android:text="Giá sản phẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="left"
                    android:text="Số Lượng"
                    android:textSize="15sp"
                    android:textColor="#510707"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:background="@drawable/spiner"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </Spinner>

            </LinearLayout>


            <Button
                android:id="@+id/btnthem"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Thêm vào giỏ hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#b41930"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#fffffe"
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="  Chi tiết sản phẩm"
                    android:textStyle="bold"
                    android:textColor="#F00"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#050505"
                    android:padding="5dp"
                    android:id="@+id/txtchitietsp"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout11"
                android:background="#b41930"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/linearlayout"
                        android:background="#fcfcf9"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="350dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:textColor="#F00"
                                android:textSize="20sp"
                                android:text="  Đánh giá khách hàng "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <Button
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top|right"
                                android:textStyle="bold"
                                android:textSize="7sp"
                                android:textColor="#fdfdfb"
                                android:background="@drawable/buttonxemthem"
                                android:id="@+id/btnxemthemnx"
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="Xem thêm >" />
                        </FrameLayout>

                    </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearlistnx"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                    <ListView
                                        android:id="@+id/listviewdanhgia"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    </ListView>
                            </LinearLayout>








                    </LinearLayout>


                <LinearLayout
                    android:background="#f9f9f7"

                    android:id="@+id/linearlayoutnhanxet"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/spiner"
                        android:id="@+id/edttennhanxet"
                        android:padding="5dp"
                        android:textColor="#060606"
                        android:hint="Họ và Tên"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/spiner"
                        android:id="@+id/edtnhanxet"
                        android:padding="5dp"
                        android:textColor="#060606"
                        android:hint="Nhận xét"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnguinhanxet"
                        android:padding="5dp"
                        android:background="@drawable/spiner"
                        android:textStyle="bold"
                        android:textColor="#ff002f"
                        android:textSize="20sp"
                        android:layout_gravity="bottom|right"
                        android:text="Gửi Nhận Xét"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
