<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView

        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/imagehinhspshoping"
                    android:scaleType="fitXY"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
                <TextView
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/txttenspshoping"
                    android:textColor="#0b0b0b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Tên sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txtgiashoping"
                    android:textColor="#e40b0b"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Giá"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.LinearLayoutCompat>
            <LinearLayout
                android:id="@+id/layoutgiamgia"
                android:background="#FF0"
                android:orientation="vertical"
                android:layout_gravity="top|right"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#F00"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Giảm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtgiamgia"
                    android:textColor="#F00"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:text="50%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>